{
  "name": "shopify-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "new-theme": "run-s clean theme-init copy clean:shopify",
    "dev": "npm run watch",
    "start": "npm run watch",
    "release": "run-s build theme-push",
    "release-dev": "run-s build theme-push-dev",
    "release-upload": "run-s build theme-upload",
    "build": "run-p build:*",
    "build:scripts": "run-s type-check babel",
    "build:styles": "npm run postcss",
    "type-check": "tsc --noEmit",
    "babel": "babel src/scripts -d assets --extensions .ts",
    "postcss": "postcss src/styles/*.css --dir assets",
    "watch": "run-p watch:*",
    "watch:type-check": "npm run type-check -- -w",
    "watch:babel": "npm run babel -- -w",
    "watch:postcss": "npm run postcss -- -w",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint:prettier": "prettier -c src config layout locales sections snippets templates",
    "fix": "run-s fix:{eslint,stylelint,prettier}",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "prettier -w src config layout locales sections snippets templates",
    "theme-init": "shopify theme init shopify",
    "theme-serve": "shopify theme dev",
    "theme-info": "shopify theme info",
    "theme-list": "shopify theme list",
    "theme-check": "shopify theme check",
    "theme-package": "shopify theme package",
    "theme-pull": "shopify theme pull -n",
    "theme-pull-new": "shopify theme pull",
    "theme-pull-dev": "shopify theme pull -d",
    "theme-push": "shopify theme push -n",
    "theme-push-dev": "shopify theme push -d",
    "theme-upload": "shopify theme push -u",
    "clean": "run-p clean:*",
    "clean:shopify": "rimraf shopify",
    "clean:assets": "rimraf assets",
    "clean:layout": "rimraf layout",
    "clean:config": "rimraf config",
    "clean:locales": "rimraf locales",
    "clean:sections": "rimraf sections",
    "clean:snippets": "rimraf snippets",
    "clean:templates": "rimraf templates",
    "copy": "run-p copy:*",
    "copy:assets": "cpx shopify/assets/** assets",
    "copy:layout": "cpx shopify/layout/** layout",
    "copy:config": "cpx shopify/config/** config",
    "copy:locales": "cpx shopify/locales/** locales",
    "copy:sections": "cpx shopify/sections/** sections",
    "copy:snippets": "cpx shopify/snippets/** snippets",
    "copy:templates": "cpx shopify/templates/** templates"
  },
  "dependencies": {
    "autoprefixer": "^10.4.17",
    "postcss-preset-env": "^9.3.0",
    "postcss-sort-media-queries": "^5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@shopify/cli": "^3.54.0",
    "@shopify/prettier-plugin-liquid": "^1.4.1",
    "@shopify/theme": "^3.54.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "babel-preset-minify": "^0.5.2",
    "cpx": "^1.5.0",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^16.2.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "20.11.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --quiet",
      "prettier -w --log-level=error"
    ],
    "src/**/*.css": [
      "stylelint --fix --quiet",
      "prettier -w --log-level=error"
    ],
    "*.{json,jsonc}": [
      "prettier -w --log-level=error"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
